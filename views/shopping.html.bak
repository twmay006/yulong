		<script type="text/javascript">
		var li=document.getElementsByClassName("thumbnail-item");
		var img=document.getElementById("productMainPic");
		var index=0;
			for(var i=0;i<li.length;i++){
				li[i].index=i;
				li[i].onmouseover=function(){
					show(this.index);
				}
			}
			function show(a){
				for (var i=0;i<li.length;i++ )
				{
					li[i].className="thumbnail-item";
				}
				li[a].className="thumbnail-item active";
				img.src="images/64"+a+".jpg";
			}
			function compute(c){
				var quality=document.querySelector(".quantity-input-tx").getAttribute("value");
				if (c.className=="reduce")
				{
					quality=quality>1?--quality:1;
				}
				else{
					quality++;
				}
				document.querySelector(".quantity-input-tx").setAttribute("value",quality);
			}
		/*	function fly(a){
				var i=a.nextSibling.nextSibling;
				i.className+=" fly";
			}*/
		</script>
